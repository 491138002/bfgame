<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/item_body_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="#EFEFEF"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="6dp"
                android:text="今日推荐"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_14"
                android:layout_weight="1" />
			
            <ImageView
                android:id="@+id/item_close_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bfgame_btn_close"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                 />
        </LinearLayout>

        <ImageView
            android:id="@+id/ad_banner_iv"
            android:layout_width="fill_parent"
            android:layout_height="98dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/bfgame_default_img" />

        <RelativeLayout
            android:id="@+id/item_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bfgame_item_bg_selector" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="8dp" >

                <ImageView
                    android:id="@+id/item_icon_iv"
                    android:layout_width="@dimen/item_icon_size"
                    android:layout_height="@dimen/item_icon_size"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/item_name_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_toLeftOf="@+id/item_download_btn"
                    android:layout_toRightOf="@+id/item_icon_iv"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/item_title_sp"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/item_download_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_name_tv"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/item_icon_iv"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/item_version_sp" />

                <TextView
                    android:id="@+id/item_size_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_name_tv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/item_download_number_tv"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/item_version_sp" />

                <TextView
                    android:id="@+id/item_version_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_name_tv"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/item_size_tv"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/item_version_sp" />

                <Button
                    android:id="@+id/item_download_btn"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bfgame_btn_blue_selector"
                    android:gravity="center"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp"
                    android:text="@string/bfgame_text_download"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/item_download_btn_sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>