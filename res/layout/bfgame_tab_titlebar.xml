<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_titlebar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dip"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <TextView
        android:id="@+id/tab_btn_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/main_color"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/bfgame_text_all_gift"
        android:textColor="@drawable/bfgame_tab_txt_selector" />

    <TextView
        android:id="@+id/tab_btn_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/bfgame_text_receive_gift"
        android:textColor="@drawable/bfgame_tab_txt_selector" />

</LinearLayout>